{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-prettier",
    "stylelint-config-recommended-less"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen",
          "import",
          "mixin",
          "include",
          "extend"
        ]
      }
    ],
    "less/color-no-invalid-hex": true,
    "less/no-duplicate-variables": true
  }
} 